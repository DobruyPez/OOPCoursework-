<Page x:Class="_4lab.UserProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_4lab"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserProfilePage"
      Background="#000000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with User Info -->
        <StackPanel Grid.Row="0" Margin="20" HorizontalAlignment="Center">
            <TextBlock x:Name="UsernameTextBlock" Text="Username: [Username]" FontSize="24" FontWeight="Bold" Foreground="#FFFFFF" HorizontalAlignment="Center"/>
            <TextBlock x:Name="EmailTextBlock" Text="Email: [Email]" FontSize="18" Foreground="#FFFFFF" Margin="0,10,0,0" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Profile Settings -->
        <StackPanel Grid.Row="1" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Twitch Link -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Twitch Username:" FontSize="16" Foreground="#FFFFFF" Width="150"/>
                <TextBox x:Name="TwitchTextBox" Width="200" Height="30" VerticalContentAlignment="Center" Background="#995200" Foreground="#FFFFFF"/>
            </StackPanel>

            <!-- Discord Link -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Discord Username:" FontSize="16" Foreground="#FFFFFF" Width="150"/>
                <TextBox x:Name="DiscordTextBox" Width="200" Height="30" VerticalContentAlignment="Center" Background="#995200" Foreground="#FFFFFF"/>
            </StackPanel>

            <!-- Team Info -->
            <TextBlock x:Name="TeamTextBlock" Text="Team: Not in a team" FontSize="16" Foreground="#FFFFFF" Margin="0,20,0,0" HorizontalAlignment="Center"/>

            <!-- Save Button -->
            <Button Content="Save Links" Width="150" Height="40" Margin="0,20" Background="#995200" Foreground="#FFFFFF" FontWeight="Bold" Click="SaveLinksButton_Click"/>
        </StackPanel>

       
    </Grid>
</Page>