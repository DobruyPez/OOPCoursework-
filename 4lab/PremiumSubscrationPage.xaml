<Page x:Class="_4lab.PremiumSubscrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_4lab"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PremiumSubscrationPage"
      Background="#000000">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Lite Subscription -->
        <Border Grid.Column="0" Margin="20" Background="#995200" CornerRadius="10">
            <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Lite" FontSize="24" FontWeight="Bold" Foreground="#FFFFFF" HorizontalAlignment="Center" />
                <TextBlock Text="$9.99/month" FontSize="18" Foreground="#FFFFFF" Margin="0,10,0,0" HorizontalAlignment="Center" />
                <TextBlock Text="Basic features" Foreground="#FFFFFF" Margin="0,10,0,0" HorizontalAlignment="Center" />
                <TextBlock Text="1 user" Foreground="#FFFFFF" Margin="0,5,0,0" HorizontalAlignment="Center" />
                <TextBlock Text="Limited support" Foreground="#FFFFFF" Margin="0,5,0,0" HorizontalAlignment="Center" />
                <Button Content="Choose Lite" Background="#000000" Foreground="#FFFFFF" Margin="0,20,0,0" Padding="10,5" />
            </StackPanel>
        </Border>

        <!-- Standard Subscription -->
        <Border Grid.Column="1" Margin="20" Background="#995200" CornerRadius="10">
            <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Standard" FontSize="24" FontWeight="Bold" Foreground="#FFFFFF" HorizontalAlignment="Center" />
                <TextBlock Text="$19.99/month" FontSize="18" Foreground="#FFFFFF" Margin="0,10,0,0" HorizontalAlignment="Center" />
                <TextBlock Text="Advanced features" Foreground="#FFFFFF" Margin="0,10,0,0" HorizontalAlignment="Center" />
                <TextBlock Text="Up to 3 users" Foreground="#FFFFFF" Margin="0,5,0,0" HorizontalAlignment="Center" />
                <TextBlock Text="Priority support" Foreground="#FFFFFF" Margin="0,5,0,0" HorizontalAlignment="Center" />
                <Button Content="Choose Standard" Background="#000000" Foreground="#FFFFFF" Margin="0,20,0,0" Padding="10,5" />
            </StackPanel>
        </Border>

        <!-- Pro Subscription -->
        <Border Grid.Column="2" Margin="20" Background="#995200" CornerRadius="10">
            <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Pro" FontSize="24" FontWeight="Bold" Foreground="#FFFFFF" HorizontalAlignment="Center" />
                <TextBlock Text="$29.99/month" FontSize="18" Foreground="#FFFFFF" Margin="0,10,0,0" HorizontalAlignment="Center" />
                <TextBlock Text="All features" Foreground="#FFFFFF" Margin="0,10,0,0" HorizontalAlignment="Center" />
                <TextBlock Text="Unlimited users" Foreground="#FFFFFF" Margin="0,5,0,0" HorizontalAlignment="Center" />
                <TextBlock Text="24/7 support" Foreground="#FFFFFF" Margin="0,5,0,0" HorizontalAlignment="Center" />
                <Button Content="Choose Pro" Background="#000000" Foreground="#FFFFFF" Margin="0,20,0,0" Padding="10,5" />
            </StackPanel>
        </Border>
    </Grid>
</Page>