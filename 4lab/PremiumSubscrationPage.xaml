<Page x:Class="_4lab.PremiumSubscrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_4lab"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PremiumSubscrationPage"
      Background="#000000">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Margin="20" Background="#995200" CornerRadius="10">
            <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{DynamicResource LitePlan}" FontSize="24" FontWeight="Bold" Foreground="#FFFFFF" HorizontalAlignment="Center" />
                <TextBlock Text="{DynamicResource LitePrice}" FontSize="18" Foreground="#FFFFFF" Margin="0,10,0,0" HorizontalAlignment="Center" />
                <TextBlock Text="{DynamicResource LiteFeatures}" Foreground="#FFFFFF" Margin="0,10,0,0" HorizontalAlignment="Center" />
                <TextBlock Text="{DynamicResource LiteUsers}" Foreground="#FFFFFF" Margin="0,5,0,0" HorizontalAlignment="Center" />
                <TextBlock Text="{DynamicResource LiteSupport}" Foreground="#FFFFFF" Margin="0,5,0,0" HorizontalAlignment="Center" />
                <Button x:Name="ChooseLiteButton" Content="{DynamicResource ChooseLite}" Background="#000000" Foreground="#FFFFFF" Margin="0,20,0,0" Padding="10,5" Click="ChooseLite_Click" />
            </StackPanel>
        </Border>
        <Border Grid.Column="1" Margin="20" Background="#995200" CornerRadius="10">
            <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{DynamicResource StandardPlan}" FontSize="24" FontWeight="Bold" Foreground="#FFFFFF" HorizontalAlignment="Center" />
                <TextBlock Text="{DynamicResource StandardPrice}" FontSize="18" Foreground="#FFFFFF" Margin="0,10,0,0" HorizontalAlignment="Center" />
                <TextBlock Text="{DynamicResource StandardFeatures}" Foreground="#FFFFFF" Margin="0,10,0,0" HorizontalAlignment="Center" />
                <TextBlock Text="{DynamicResource StandardUsers}" Foreground="#FFFFFF" Margin="0,5,0,0" HorizontalAlignment="Center" />
                <TextBlock Text="{DynamicResource StandardSupport}" Foreground="#FFFFFF" Margin="0,5,0,0" HorizontalAlignment="Center" />
                <Button x:Name="ChooseStandardButton" Content="{DynamicResource ChooseStandard}" Background="#000000" Foreground="#FFFFFF" Margin="0,20,0,0" Padding="10,5" Click="ChooseStandard_Click" />
            </StackPanel>
        </Border>
        <Border Grid.Column="2" Margin="20" Background="#995200" CornerRadius="10">
            <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{DynamicResource ProPlan}" FontSize="24" FontWeight="Bold" Foreground="#FFFFFF" HorizontalAlignment="Center" />
                <TextBlock Text="{DynamicResource ProPrice}" FontSize="18" Foreground="#FFFFFF" Margin="0,10,0,0" HorizontalAlignment="Center" />
                <TextBlock Text="{DynamicResource ProFeatures}" Foreground="#FFFFFF" Margin="0,10,0,0" HorizontalAlignment="Center" />
                <TextBlock Text="{DynamicResource ProUsers}" Foreground="#FFFFFF" Margin="0,5,0,0" HorizontalAlignment="Center" />
                <TextBlock Text="{DynamicResource ProSupport}" Foreground="#FFFFFF" Margin="0,5,0,0" HorizontalAlignment="Center" />
                <Button x:Name="ChooseProButton" Content="{DynamicResource ChoosePro}" Background="#000000" Foreground="#FFFFFF" Margin="0,20,0,0" Padding="10,5" Click="ChoosePro_Click" />
            </StackPanel>
        </Border>
    </Grid>
</Page>