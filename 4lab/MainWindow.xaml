<Window x:Class="_4lab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:_4lab"
        Title="My Application" Height="600" Width="800">
    <DockPanel>
        <Grid DockPanel.Dock="Top" Height="60" Background="#CC7A00">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Навигация -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                <Button Content="Home" Style="{StaticResource OrangeBlackButtonStyle}" Margin="5" Click="NavigateToHome"/>
                <Button Content="←" Style="{StaticResource OrangeBlackButtonStyle}" Margin="5" x:Name="BackButton" Click="BackButton_Click" IsEnabled="False" ToolTip="Назад"/>
                <Button Content="→" Style="{StaticResource OrangeBlackButtonStyle}" Margin="5" x:Name="ForwardButton" Click="ForwardButton_Click" IsEnabled="False" ToolTip="Вперед"/>
            </StackPanel>

            <!-- Логотип -->
            <TextBlock Grid.Column="1" Text="STANDOFF 2" Foreground="White" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <!-- Иконка пользователя -->
            <Button Grid.Column="2" Width="40" Height="40" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Right" Content="👤" FontSize="18" Click="RegisterUser"/>
        </Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>