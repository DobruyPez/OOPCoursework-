<Page x:Class="_4lab.RegisterTeamPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_4lab"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="400">

    <Page.Resources>
        <!-- Кнопка "Создать команду" -->
        <Style x:Key="OrangeBlackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="Orange"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="Orange"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#1A1A1A">
        <Border Background="#C26100"
                CornerRadius="10"
                Padding="20"
                Width="320"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="CREATE A TEAM"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock Text="TEAM NAME" Foreground="Black" FontWeight="Bold"/>
                <TextBox x:Name="TeamNameBox"
                         Background="Black"
                         Foreground="White"
                         Margin="0,5,0,15"
                         Padding="8"
                         BorderThickness="0"/>

                <TextBlock Text="TEAM REGION" Foreground="Black" FontWeight="Bold"/>
                <ComboBox Background="Black"
                          Foreground="White"
                          Margin="0,5,0,15"
                          Padding="8"
                          BorderThickness="0">
                    <ComboBoxItem Content="RUSSIAN FEDERATION"/>
                    <ComboBoxItem Content="UKRAIN"/>
                    <ComboBoxItem Content="REPUBLIC OF BELARUS"/>
                </ComboBox>

                <TextBlock Text="TEAM PASSWORD" Foreground="Black" FontWeight="Bold"/>
                <PasswordBox x:Name="TeamPasswordBox"
                             Background="Black"
                             Foreground="White"
                             Margin="0,5,0,15"
                             Padding="8"
                             BorderThickness="0"/>

                <Button Content="CREATE TEAM"
                        Style="{StaticResource OrangeBlackButtonStyle}"
                        HorizontalAlignment="Stretch"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
