<Page x:Class="_4lab.PaymentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_4lab"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PaymentPage"
      Background="#000000">
    <Page.Resources>
        <!-- Стиль для текстовых полей -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#333333" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="BorderBrush" Value="#995200" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Margin" Value="0,5" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Стиль для кнопки -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#995200" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Margin" Value="0,20" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="#995200"
                                BorderThickness="2"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#B37400" />
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05" CenterX="0.5" CenterY="0.5" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid>
        <Border Background="#1A1A1A" CornerRadius="10" Margin="50" Padding="20">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
                <TextBlock x:Name="PlanTitle" Text="Оплата плана Pro" FontSize="24" FontWeight="Bold" Foreground="#FFFFFF" HorizontalAlignment="Center" Margin="0,0,0,20" />
                <TextBlock Text="Номер карты" Foreground="#FFFFFF" FontSize="14" FontFamily="Segoe UI" />
                <TextBox x:Name="CardNumber" MaxLength="16" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Срок действия" Foreground="#FFFFFF" FontSize="14" FontFamily="Segoe UI" />
                        <TextBox x:Name="ExpiryDate" MaxLength="5" />
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="CVV" Foreground="#FFFFFF" FontSize="14" FontFamily="Segoe UI" />
                        <TextBox x:Name="Cvv" MaxLength="3" />
                    </StackPanel>
                </Grid>
                <TextBlock Text="Имя владельца" Foreground="#FFFFFF" FontSize="14" FontFamily="Segoe UI" Margin="0,10,0,0" />
                <TextBox x:Name="CardHolder" />
                <Button x:Name="PayButton" Content="Оплатить" Click="PayButton_Click" />
                <TextBlock x:Name="StatusMessage" Foreground="#FFFFFF" FontSize="14" FontFamily="Segoe UI" HorizontalAlignment="Center" Margin="0,10,0,0" Visibility="Collapsed" />
            </StackPanel>
        </Border>
    </Grid>
</Page>