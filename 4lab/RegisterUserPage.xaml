<Page x:Class="_4lab.RegisterUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_4lab"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="500"
      Title="RegisterUserPage">
    <Page.Resources>
        <Style x:Key="OrangeBlackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="#995200"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#995200"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid Background="#1A1A1A">
        <Border Background="#995200"
                CornerRadius="10"
                Padding="20"
                Width="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="{DynamicResource RegisterUserTitle}"
                           Foreground="Black"
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                <TextBlock Text="{DynamicResource UsernameLabel}" Foreground="Black" FontWeight="Bold"/>
                <TextBox x:Name="UsernameBox"
                         Background="Black"
                         Foreground="White"
                         Margin="0,5,0,15"
                         Padding="8"
                         BorderThickness="0"/>
                <TextBlock Text="{DynamicResource EmailLabel}" Foreground="Black" FontWeight="Bold"/>
                <TextBox x:Name="EmailBox"
                         Background="Black"
                         Foreground="White"
                         Margin="0,5,0,15"
                         Padding="8"
                         BorderThickness="0"/>
                <TextBlock Text="{DynamicResource PasswordLabel}" Foreground="Black" FontWeight="Bold"/>
                <PasswordBox x:Name="PasswordBox"
                             Background="Black"
                             Foreground="White"
                             Margin="0,5,0,15"
                             Padding="8"
                             BorderThickness="0"/>
                <TextBlock Text="{DynamicResource ConfirmPasswordLabel}" Foreground="Black" FontWeight="Bold"/>
                <PasswordBox x:Name="ConfirmPasswordBox"
                             Background="Black"
                             Foreground="White"
                             Margin="0,5,0,15"
                             Padding="8"
                             BorderThickness="0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="RegisterButton"
                            Content="{DynamicResource RegisterButton}"
                            Style="{StaticResource OrangeBlackButtonStyle}"
                            HorizontalAlignment="Center"
                            Margin="0,0,10,0"
                            Click="RegisterButton_Click"/>
                    <Button x:Name="SignInButton"
                            Content="Sign In"
                            Style="{StaticResource OrangeBlackButtonStyle}"
                            HorizontalAlignment="Center"
                            Click="SignInButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>