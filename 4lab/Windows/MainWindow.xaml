<Window x:Class="_4lab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:_4lab"
        Title="My Application" MinHeight="600" MinWidth="800"
        ResizeMode="NoResize"
        Background="#1A1A1A">
    <Window.Resources>
        <!-- Стиль для TextBlock -->
        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="TextAlignment" Value="Left"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" ShadowDepth="1" BlurRadius="3" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для заголовков TextBlock -->
        <Style x:Key="HeaderTextBlockStyle" BasedOn="{StaticResource TextBlockStyle}" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0"/>
        </Style>

        <!-- Шаблон для Button -->
        <ControlTemplate x:Key="CustomButtonTemplate" TargetType="Button">
            <Border x:Name="ButtonBorder" 
                    CornerRadius="10" 
                    Background="#2A2A2A" 
                    BorderBrush="Black" 
                    BorderThickness="1">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                <Border.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetName="ButtonBorder" 
                                               Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                               To="#4A4A4A" Duration="0:0:0.3"/>
                                <DoubleAnimation Storyboard.TargetName="ButtonBorder"
                                                Storyboard.TargetProperty="Opacity"
                                                To="0.9" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetName="ButtonBorder" 
                                               Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                               To="#2A2A2A" Duration="0:0:0.3"/>
                                <DoubleAnimation Storyboard.TargetName="ButtonBorder"
                                                Storyboard.TargetProperty="Opacity"
                                                To="1" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="Button.Click">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="ButtonBorder"
                                                Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                To="0.95" Duration="0:0:0.1" AutoReverse="True"/>
                                <DoubleAnimation Storyboard.TargetName="ButtonBorder"
                                                Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                To="0.95" Duration="0:0:0.1" AutoReverse="True"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
                <Border.RenderTransform>
                    <ScaleTransform CenterX="0.5" CenterY="0.5"/>
                </Border.RenderTransform>
            </Border>
        </ControlTemplate>

        <!-- Стиль для Button -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Template" Value="{StaticResource CustomButtonTemplate}"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Стиль для Language Button -->
        <Style x:Key="LanguageButtonStyle" BasedOn="{StaticResource ButtonStyle}" TargetType="Button">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Width" Value="50"/>
        </Style>

        <!-- Стиль для StackPanel -->
        <Style x:Key="StackPanelStyle" TargetType="StackPanel">
            <Setter Property="Margin" Value="10"/>
        </Style>

        <!-- Стиль для Grid (Header) -->
        <Style x:Key="HeaderGridStyle" TargetType="Grid">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FF8C00" Offset="0"/>
                        <GradientStop Color="#995200" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" ShadowDepth="3" BlurRadius="5" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для Footer Grid -->
        <Style x:Key="FooterGridStyle" TargetType="Grid">
            <Setter Property="Background" Value="#111111"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" ShadowDepth="3" BlurRadius="5" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <DockPanel>
        <Grid DockPanel.Dock="Top" Height="60" Style="{StaticResource HeaderGridStyle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation -->
            <Grid Grid.Column="0" VerticalAlignment="Center" Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="100"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="{DynamicResource HomeButton}" 
                        Style="{StaticResource ButtonStyle}" 
                        Click="NavigateToHome" 
                        HorizontalAlignment="Left"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0" Style="{StaticResource StackPanelStyle}">
                    <Button Content="←" 
                            Style="{StaticResource ButtonStyle}" 
                            x:Name="BackButton" 
                            Click="BackButton_Click" 
                            IsEnabled="False" 
                            ToolTip="{DynamicResource BackButtonTooltip}" 
                            FontSize="18" 
                            FontWeight="ExtraBold" 
                            Width="40" 
                            Height="40"/>
                    <Button Content="→" 
                            Style="{StaticResource ButtonStyle}" 
                            x:Name="ForwardButton" 
                            Click="ForwardButton_Click" 
                            IsEnabled="False" 
                            ToolTip="{DynamicResource ForwardButtonTooltip}" 
                            FontSize="18" 
                            FontWeight="ExtraBold" 
                            Width="40" 
                            Height="40"/>
                </StackPanel>
            </Grid>

            <!-- Logo -->
            <TextBlock Grid.Column="1" Text="{DynamicResource LogoText}" 
                       Style="{StaticResource HeaderTextBlockStyle}" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center" 
                       Margin="126,0,0,0"/>

            <!-- User Icon and Language Switch -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="10" Style="{StaticResource StackPanelStyle}">
                <Button Style="{StaticResource LanguageButtonStyle}" 
                        Content="EN" 
                        x:Name="LanguageButton" 
                        Click="LanguageButton_Click" 
                        ToolTip="{DynamicResource LanguageButtonTooltip}"/>
                <Button Style="{StaticResource ButtonStyle}" 
                         Content="👥" 
                         Click="NavigateToTeamProfile" 
                         Width="50" 
                         Height="38" 
                         FontSize="24" 
                         ToolTip="Профиль команды"
                         Margin="5,0"/>
                <Button Style="{StaticResource ButtonStyle}" 
                        Content="👤" 
                        Click="RegisterUser" 
                        Width="52" 
                        Height="39" 
                        FontSize="24" 
                        Margin="5,0" RenderTransformOrigin="0.468,-0.179"/>
                <Button Content="🏠" 
                        Style="{StaticResource ButtonStyle}" 
                        Click="NavigateToUserProfile" 
                        Width="50" 
                        Height="38" 
                        FontSize="24" 
                        ToolTip="{DynamicResource PersonalCabinetTooltip}" 
                        Margin="5,0"/>
            </StackPanel>
        </Grid>
        <!-- Footer -->
        <Grid DockPanel.Dock="Bottom" Height="68" Style="{StaticResource FooterGridStyle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Style="{StaticResource StackPanelStyle}" VerticalAlignment="Center" Height="60" Margin="10,0,10,0">
                <TextBlock Text="{DynamicResource TermsOfUse}" Style="{StaticResource TextBlockStyle}"/>
                <TextBlock Text="{DynamicResource PrivacyPolicy}" Style="{StaticResource TextBlockStyle}"/>
                <TextBlock Text="{DynamicResource CookiePolicy}" Style="{StaticResource TextBlockStyle}"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Style="{StaticResource StackPanelStyle}" VerticalAlignment="Center">
                <TextBlock Text="{DynamicResource SocialMedia}" Style="{StaticResource TextBlockStyle}"/>
                <TextBlock Text="{DynamicResource SocialMediaLinks}" Style="{StaticResource TextBlockStyle}"/>
                <TextBlock Text="{DynamicResource Instagram}" Style="{StaticResource TextBlockStyle}"/>
            </StackPanel>
            <StackPanel Grid.Column="2" Style="{StaticResource StackPanelStyle}" VerticalAlignment="Center">
                <TextBlock Text="{DynamicResource Contact}" Style="{StaticResource TextBlockStyle}"/>
                <TextBlock Text="{DynamicResource HelpCenterDiscord}" Style="{StaticResource TextBlockStyle}"/>
                <TextBlock Text="{DynamicResource TeamFinder}" Style="{StaticResource TextBlockStyle}"/>
            </StackPanel>
        </Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>