<Page x:Class="_4lab.TeamPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:local="clr-namespace:_4lab"
      xmlns:controls="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
      mc:Ignorable="d" 
      Title="TeamPage" MinHeight="400" MinWidth="792"
      Background="#1A1A1A">
    <Page.Resources>
        <!-- Стиль TextBlockStyle, определён первым, чтобы избежать проблем с порядком -->
        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="TextAlignment" Value="Left"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
        </Style>

        <!-- Стиль HeaderTextBlockStyle, зависит от TextBlockStyle -->
        <Style x:Key="HeaderTextBlockStyle" BasedOn="{StaticResource TextBlockStyle}" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Шаблон CustomButtonTemplate для кнопок -->
        <ControlTemplate x:Key="CustomButtonTemplate" TargetType="Button">
            <Border x:Name="ButtonBorder" 
                    CornerRadius="10" 
                    Background="#FF8C00" 
                    BorderBrush="Black" 
                    BorderThickness="1">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                <Border.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetName="ButtonBorder" 
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#4A4A4A" Duration="0:0:0.3"/>
                                <DoubleAnimation Storyboard.TargetName="ButtonBorder"
                                                 Storyboard.TargetProperty="Opacity"
                                                 To="0.9" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetName="ButtonBorder" 
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#FF8C00" Duration="0:0:0.3"/>
                                <DoubleAnimation Storyboard.TargetName="ButtonBorder"
                                                 Storyboard.TargetProperty="Opacity"
                                                 To="1" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="Button.Click">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="ButtonBorder"
                                                 Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                 To="0.95" Duration="0:0:0.1" AutoReverse="True"/>
                                <DoubleAnimation Storyboard.TargetName="ButtonBorder"
                                                 Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                 To="0.95" Duration="0:0:0.1" AutoReverse="True"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
                <Border.RenderTransform>
                    <ScaleTransform CenterX="0.5" CenterY="0.5"/>
                </Border.RenderTransform>
            </Border>
        </ControlTemplate>

        <!-- Стиль ButtonStyle, использует CustomButtonTemplate -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Template" Value="{StaticResource CustomButtonTemplate}"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Стиль MemberListStyle для ListBox -->
        <Style x:Key="MemberListStyle" TargetType="ListBox">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="Border" Background="Transparent" CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Stretch"/>
                                    </Border>
                                    <!-- Триггеры остаются без изменений -->
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataTemplate для элементов ListBox -->
        <DataTemplate x:Key="MemberTemplate">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Ellipse Width="40" Height="40" Fill="#FF8C00" Grid.Column="0"/>
                <TextBlock Text="{Binding Name}" Style="{StaticResource TextBlockStyle}" FontSize="14" Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Role}" Style="{StaticResource TextBlockStyle}" FontSize="12" Foreground="#AAAAAA" Grid.Column="2" VerticalAlignment="Center"/>
            </Grid>
        </DataTemplate>

        <!-- Заглушка для BooleanToVisibilityConverter -->
        <!-- TODO: Реализуйте конвертер в коде или подключите существующий -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <!-- Заглушка для ресурсов локализации -->
        <!-- TODO: Определите эти ресурсы в App.xaml или ResourceDictionary -->
        <sys:String x:Key="TeamPageTitle" xml:space="preserve">Team Page</sys:String>
        <sys:String x:Key="MembersLabel" xml:space="preserve">Members</sys:String>
        <sys:String x:Key="TeamDescriptionLabel" xml:space="preserve">Team Description</sys:String>
        <sys:String x:Key="InfoViewButton" xml:space="preserve">View Info</sys:String>
        <sys:String x:Key="EditViewButton" xml:space="preserve">Edit</sys:String>
    </Page.Resources>
    <DockPanel LastChildFill="True" Margin="0,10,0,0" HorizontalAlignment="Center" MinWidth="730" MinHeight="380" VerticalAlignment="Top">
        <!-- Заголовок страницы -->
        <TextBlock x:Name="TeamTitle" 
          DockPanel.Dock="Top" 
          Style="{StaticResource HeaderTextBlockStyle}"/>

        <!-- Основное содержимое -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Секция участников -->
            <Border Grid.Column="0" 
                   Background="#333333"
                   CornerRadius="5"
                   BorderBrush="#FFFFFF"
                   BorderThickness="1"
                   Margin="0,0,5,0">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top"
                              Text="{DynamicResource MembersLabel}"
                              Style="{StaticResource HeaderTextBlockStyle}"
                              Margin="10"/>

                    <ListBox x:Name="MembersList" 
                            DockPanel.Dock="Top"
                            Style="{StaticResource MemberListStyle}" 
                            ItemTemplate="{StaticResource MemberTemplate}"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                </DockPanel>
            </Border>

            <!-- Секция описания команды -->
            <Border Grid.Column="1" 
                   Background="#333333"
                   CornerRadius="5"
                   BorderBrush="#FFFFFF"
                   BorderThickness="1" HorizontalAlignment="Right" MinWidth="360" MinHeight="338" VerticalAlignment="Center">
                <DockPanel HorizontalAlignment="Right" MinWidth="358">
                    <StackPanel DockPanel.Dock="Top"
                               Orientation="Horizontal" 
                               Margin="10"
                               Visibility="{Binding IsOwner, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button Style="{StaticResource ButtonStyle}" 
                               Content="{DynamicResource InfoViewButton}" 
                               Click="ShowDefaultInfo_Click" 
                               Margin="0,0,10,0"/>
                        <Button Style="{StaticResource ButtonStyle}" 
                               Content="{DynamicResource EditViewButton}" 
                               Click="ShowEditControls_Click"/>
                    </StackPanel>

                    <ContentControl x:Name="TeamDescriptionContent"
                                  DockPanel.Dock="Top"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"/>
                </DockPanel>
            </Border>
        </Grid>
    </DockPanel>
</Page>
