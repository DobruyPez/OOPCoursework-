<UserControl x:Class="_4lab.Pages.Admin.Ban.BanUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300">
    <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding PlayerName}" VerticalAlignment="Center"/>
            <Button x:Name="BanButton" Grid.Column="1" Content="Ban" 
                    Padding="10,2" Click="BanButton_Click"/>
        </Grid>
    </Border>
</UserControl>