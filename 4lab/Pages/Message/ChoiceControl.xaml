<UserControl x:Class="_4lab.ChoiceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="300">
    <UserControl.Resources>
        <!-- Стиль TextBlock -->
        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Шаблон для кнопок -->
        <ControlTemplate x:Key="CustomButtonTemplate" TargetType="Button">
            <Border x:Name="ButtonBorder" 
                    CornerRadius="10" 
                    Background="#2A2A2A" 
                    BorderBrush="Black" 
                    BorderThickness="1">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                <Border.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetName="ButtonBorder" 
                                               Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                               To="#4A4A4A" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetName="ButtonBorder" 
                                               Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                               To="#2A2A2A" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
            </Border>
        </ControlTemplate>

        <!-- Стиль для кнопок -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Template" Value="{StaticResource CustomButtonTemplate}"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Border BorderBrush="#FF8C00" BorderThickness="1" CornerRadius="5" Padding="5" Margin="5">
            <StackPanel>
                <TextBlock x:Name="SenderName" FontWeight="Bold" Foreground="#FF8C00"/>
                <TextBlock x:Name="MessageContent" TextWrapping="Wrap" Margin="0,5,0,5"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="AcceptButton" Content="✓" Width="30" Margin="0,0,5,0" 
                            Click="AcceptButton_Click" Style="{StaticResource ButtonStyle}"/>
                    <Button x:Name="DeclineButton" Content="✕" Width="30" 
                            Click="DeclineButton_Click" Style="{StaticResource ButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>