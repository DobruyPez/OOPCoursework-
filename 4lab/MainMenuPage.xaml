<Page x:Class="_4lab.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="Black">
    <DockPanel LastChildFill="True">
        <Grid DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                <Button Width="180" Height="180" Margin="20" Background="#995200" Foreground="Black" FontWeight="Bold" Click="CreateTeamButton_Click">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="👥" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock Text="{DynamicResource CreateTeamButton}" FontSize="14" Margin="0,10,0,0" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Width="180" Height="180" Background="#995200" Foreground="Black" FontWeight="Bold" Click="FindPraccsButton_Click">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="🔍" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock Text="{DynamicResource FindPraccsButton}" FontSize="14" Margin="0,10,0,0" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Width="180" Height="180" Margin="20" Background="#995200" Foreground="Black" FontWeight="Bold" Click="SubscriptionButton_Click">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="💰" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock Text="{DynamicResource SubscriptionButton}" FontSize="14" Margin="0,10,0,0" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </DockPanel>
</Page>
