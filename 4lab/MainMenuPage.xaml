        </Grid>-->

        <!-- Центральная часть -->
        <Grid DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Центральные кнопки -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                <Button Width="180" Height="180" Margin="20" Background="#CC7A00" Foreground="Black" FontWeight="Bold" Click="CreateTeamButton_Click">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="👥" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock Text="CREATE A TEAM" FontSize="14" Margin="0,10,0,0" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Width="180" Height="180" Background="#CC7A00" Foreground="Black" FontWeight="Bold" Click="FindPraccsButton_Click">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="🔍" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock Text="FIND PRACCS" FontSize="14" Margin="0,10,0,0" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Нижнее меню -->
        <Grid DockPanel.Dock="Bottom" Height="60" Background="#111">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10" VerticalAlignment="Center">
                <TextBlock Text="TERMS OF USE" Foreground="White" FontSize="10"/>
                <TextBlock Text="PRIVACY POLICY" Foreground="White" FontSize="10"/>
                <TextBlock Text="COOKIE POLICY" Foreground="White" FontSize="10"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Center">
                <TextBlock Text="SOCIAL MEDIA" Foreground="White" FontSize="10"/>
                <TextBlock Text="X (TWITTER), TWITCH" Foreground="White" FontSize="10"/>
                <TextBlock Text="INSTAGRAM" Foreground="White" FontSize="10"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Margin="10" VerticalAlignment="Center">
                <TextBlock Text="CONTACT" Foreground="White" FontSize="10"/>
                <TextBlock Text="HELP CENTER, DISCORD" Foreground="White" FontSize="10"/>
                <TextBlock Text="TEAM FINDER" Foreground="White" FontSize="10"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Page>
